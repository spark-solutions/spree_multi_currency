<% card_class ||= 'default' %>
<div class="col-12 col-lg-6">
  <div class="card mb-3 <%= "border-#{card_class}" %>">
    <div class="card-header">
      <h3 class="card-title h5 mb-0">
        <span class="sku">
          <%= variant.sku %>
        </span>

        <span class="text-muted pull-right">
          <%= variant.is_master? ? Spree.t(:master) : variant.options_text.blank? ? Spree.t(:variant) : variant.options_text %>
        </span>
      </h3>
    </div>

    <div class="card-body form-inline">
      <% supported_currencies.each do |currency| %>
        <% code  = currency.iso_code %>
        <% price = variant.price_in(code) %>
        <div class="form-group mb-2 w-100">
          <%= label_tag "vp[#{variant.id}][#{code}]", code, class: 'control-label col-2' %>
          <div class="col-10">
            <%= text_field_tag "vp[#{variant.id}][#{code}]",
              (price && price.price ? price.display_amount.money : ''),
              class: 'form-control w-100' %>
           </div>
        </div>
      <% end %>
    </div>
  </div>
</div>